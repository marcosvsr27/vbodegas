PORT=10000

# =========================
# Seguridad y Autenticación
# =========================
JWT_SECRET=super-secret-key-aqui

# =========================
# Base de Datos
# =========================
# Para Render/PostgreSQL (recomendado)
DATABASE_URL=postgres://usuario:contraseña@host:5432/dbname

# Si quieres seguir probando local con SQLite (no en Render)
 SQLITE_PATH=./data/db.sqlite

